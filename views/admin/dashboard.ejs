          </div>

          <!-- Charts Section -->
          <div class="charts-section">
            <div class="card chart-card large">
              <div class="card-header">
                <h3>Revenue Overview</h3>
              </div>
              <div class="card-body">
                <canvas id="revenueChart"></canvas>
